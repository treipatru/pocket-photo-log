{
	"typescript": {
		"exportDeclaration.preferSingleLine": false,
		"importDeclaration.preferSingleLine": false,
		"jsx.forceNewLinesSurroundingContent": true,
		"jsx.quoteStyle": "preferDouble",
		"newLineKind": "lf",
		"quoteProps": "consistent",
		"quoteStyle": "preferSingle",
		"semiColons": "always",
		"trailingCommas": "onlyMultiLine",
		"useTabs": true
	},
	"json": {
		"indentWidth": 2,
		"useTabs": true
	},
	"excludes": [
		"**/*-lock.json",
		"**/.next",
		"**/.turbo",
		"**/build",
		"**/migration_lock.toml",
		"**/node_modules",
		"**/out"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.91.2.wasm",
		"https://plugins.dprint.dev/json-0.19.3.wasm"
	]
}
