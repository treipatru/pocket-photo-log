{
  "extends": "astro/tsconfigs/strict",
  "exclude": [
    "node_modules",
    "dist",
		// Exclude the editor because of tinyMCE
		"./**/pages-editor.tsx"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
