---
import { AstroSeo } from "@astrolib/seo";
import { pocketClient } from "@/services/pocket/pocket-client";
import CmsLayout from "@/layouts/cms-layout.astro";
import PostDeleteForm from "@/components/posts/forms/post-delete-form";

const id = Astro.params.id;

const post = await pocketClient
	.collection("posts")
	.getFirstListItem(`id="${id}"`);
---

<AstroSeo title={`Delete post | ${Astro.locals.siteSettings.TITLE}`} />

<CmsLayout>
	<span slot="title">Delete post</span>

	<section class="max-w-md m-auto">
		<PostDeleteForm post={post} client:load />
	</section>
</CmsLayout>
