---
import "@/styles/global.css";
import Head from "@/components/base/head.astro";

interface Props {
	title?: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="lofi">
	<Head />

	<body class="bg-primary-background text-primary font-body font-medium pb-14">
		<main class="px-4 mt-8 md:mt-32 container max-w-screen-sm">
			{title && <h1 class="text-3xl font-bold mb-4">{title}</h1>}

			<slot />
		</main>
	</body>
</html>
