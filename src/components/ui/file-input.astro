---
interface Props {
	classes?: string;
	label: string;
	name: string;
	required?: boolean;
}
const { classes, label, name, required } = Astro.props;
---

<label class:list={["form-control w-full max-w-xs", classes]}>
	<div class="label">
		<span class="label-text">{label}</span>
	</div>

	<input
		type="file"
		class="file-input grow file-input-bordered w-full max-w-xs"
		name={name}
		required={required}
		accept="image/*"
	/>
</label>
