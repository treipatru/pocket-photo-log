---
import { type Post } from "@/entities/posts";
import TimelineItem from "@/components/posts/post.astro";

interface Props {
	posts: Post[];
}

const { posts } = Astro.props;
---

<div class="flex flex-col gap-y-24 md:gap-y-32 max-w-screen-sm m-auto">
	{posts.map((post) => <TimelineItem isLink post={post} size="medium" />)}
</div>
