---
import { type Post } from "@/entities/posts";
import { getImgUrl, type ImageSize } from "@/lib/api/get-img-url";
import TagList from "@/components/tag-list.astro";

interface Props {
	isLink: boolean;
	post: Post;
	size: ImageSize;
}

const {
	isLink,
	post: { alt, expand, id, file, caption },
	size,
} = Astro.props;
---

<article class="flex flex-col items-center md:items-center md:text-center">
	<figure class="mb-2">
		{
			isLink ? (
				<a href={`/posts/${id}`} aria-label={"Post"}>
					<img src={getImgUrl(id, file, size)} alt={alt} loading="lazy" />
				</a>
			) : (
				<img src={getImgUrl(id, file, size)} alt={alt} loading="lazy" />
			)
		}

		{
			caption && (
				<figcaption
					class="prose mt-2 text-lg leading-tight"
					set:html={caption}
				/>
			)
		}
	</figure>

	{expand?.tags && <TagList tags={expand.tags} />}
</article>
